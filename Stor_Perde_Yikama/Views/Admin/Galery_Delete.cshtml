@model Stor_Perde_Yikama.Models.Galery

@{
    ViewBag.Title = "Galery Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Kayıt Sil</h4>
                        </div>
                    </div>
                    <div class="card-body">

                        <h3>İlgili kaydı silmek istiyor musunuz?</h3>
                        <div>
                            <hr />

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.galery_pic)
                                </dt>

                                <dd>
                                    <img src="data:image/png;base64,@System.Convert.ToBase64String(Model.galery_pic)"
                                         alt="resim yüklenemedi" height=100 width=100 />
                                    @* @Html.DisplayFor(model => model.SliderFoto)*@
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.baslik)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.baslik)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.alt_baslik)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.alt_baslik)
                                </dd>

                            </dl>


                            @using (Html.BeginForm())
            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Sil" class="btn btn-default" /> |
                                    @Html.ActionLink("Geri Dön", "MyGalery")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
