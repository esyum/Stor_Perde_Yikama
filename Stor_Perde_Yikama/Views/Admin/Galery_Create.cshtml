@*@model Stor_Perde_Yikama.Models.Galery*@
@model Stor_Perde_Yikama.Controllers.AnaSayfaDTO

@{
    ViewBag.Title = "Galeri Bilgi Ekleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Yeni Kayıt</h4>
                        </div>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("Galery_Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Galeri</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DTO_Galery_Model.baslik, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DTO_Galery_Model.baslik, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DTO_Galery_Model.baslik, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DTO_Galery_Model.alt_baslik, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DTO_Galery_Model.alt_baslik, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DTO_Galery_Model.alt_baslik, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DTO_Galery_Model.title, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DTO_Galery_Model.title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DTO_Galery_Model.title, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DTO_Galery_Model.filter_name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.DTO_Galery_Model.filter_name,
                                       new List<SelectListItem>
                                            {
                                                new SelectListItem {Text = "Yıkanmış Ürünler", Value = "temiz"},
                                                new SelectListItem {Text = "Karşılaştırma", Value = "kiyas"},
                                                new SelectListItem {Text = "Ev Hizmetleri", Value = "ev"},
                                                new SelectListItem {Text = "Ofis Hizmetleri", Value = "is"}
                                            }

                                       , "Seçiniz", new { htmlAttributes = new { @class = "form-control" } })

                                        @Html.ValidationMessageFor(model => model.DTO_Galery_Model.filter_name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DTO_Galery_Model.galery_pic, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="file" id="file" name="file" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Kaydet" class="btn btn-default" />
                                        @Html.ActionLink("Geri Dön", "MyGalery")
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


